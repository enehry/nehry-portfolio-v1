---

<aside
  class="fixed min-h-screen flex md:items-center items-end md:w-min w-full"
>
  <nav
    class="mx-auto md:mx-4 my-4 md:my-0 border border-secondary dark:bg-stone-600 bg-primary hover:shadow-[10px_10px_0px_0px_rgb(0,0,0)] transition-all duration-100 shadow-[2px_2px_0px_0px_rgb(0,0,0)] text-black py-2 px-4 md:py-4 md:px-4"
  >
    <ul
      class="flex items-center gap-4 md:flex-col flex-row dark:text-stone-400"
    >
      {
        pages.map((page: Page) => {
          return (
            <li>
              <a
                href={page.path}
                aria-label={page.name}
                class="flex flex-col items-center gap-2 hover:-translate-y-1 transition-all duration-150"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width={1.5}
                  stroke="currentColor"
                  class="w-6 h-6"
                  set:html={page.svg}
                />
                {currentPage === page.name ? (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="3.5"
                    stroke="currentColor"
                    class="w-3 h-3 text-black dark:text-stone-400"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12 19.5v-15m0 0l-6.75 6.75M12 4.5l6.75 6.75"
                    />
                  </svg>
                ) : (
                  ""
                )}
              </a>
            </li>
          );
        })
      }
      <li>
        <ThemeToggle client:load />
      </li>
    </ul>
  </nav>
</aside>
